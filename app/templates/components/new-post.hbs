{{yield}}
{{#if newPostForm}}
<h1>New Rental</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="img">Image
        {{input value=img id="img"}}
        </label>
      </div>

      <div class="form-group">
        <label for="title">Title
        {{input value=title id="title"}}
        </label>
      </div>

      <div class="form-group">
        <label for="author">Author
        {{input value=author id="author"}}
        </label>
      </div>

      <div class="form-group">
        <label for="content">Content
        {{textarea value=content id="content"}}
        </label>
      </div>

      <div class="form-group">
        <label for="date">Date
        {{input value=date id="date"}}
        </label>
      </div>

      <button {{action 'save'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'postFormShow'}}>New Rental</button>
{{/if}}
